{
  "name": "screen-recorder",
  "version": "1.0.0",
  "description": "Ultimate Screen Recorder with area selection, video clipping, and MP4 export",
  "main": "dist/main/main.js",
  "scripts": {
    "start": "npm run build && electron .",
    "build": "tsc",
    "watch": "tsc -w",
    "dev": "concurrently \"npm run watch\" \"electron .\"",
    "package": "npm run build && electron-builder",
    "package:win": "npm run build && electron-builder --win"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "fluent-ffmpeg": "^2.1.2",
    "@ffmpeg-installer/ffmpeg": "^1.1.0"
  },
  "build": {
    "appId": "com.screenrecorder.app",
    "productName": "Screen Recorder",
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "dist/**/*",
      "src/renderer/**/*",
      "assets/**/*"
    ],
    "extraResources": [
      {
        "from": "node_modules/@ffmpeg-installer/ffmpeg/platforms/win32-x64",
        "to": "ffmpeg",
        "filter": ["**/*"]
      }
    ]
  }
}
